<div class="page-header">
  <ul class="nav nav-pills pull-right">
    <li class="active">
      <%= link_to 'Create New Job Posting', new_job_path %>
    </li>
    <li class="active">
      <%= link_to "Home", root_path %>
    </li>
  </ul>
  <h1>Job Listings</h1>
</div>

<p id="notice"><%= notice %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Company</th>
      <th>Location</th>
      <th>Title</th>
      <th>Description</th>
      <th>Duties</th>
      <th>Experience</th>
      <th>Education</th>
      <th>Posted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company %></td>
        <td><%= job.location %></td>
        <td><%= job.title %></td>
        <td><%= truncate(job.description, length:100) %></td>
        <td><%= truncate(job.duties, length:100) %></td>
        <td><%= truncate(job.experience, length:100) %></td>
        <td><%= job.education %></td>
        <td><%= job.posted %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="nav nav-pills pull-left">
  <li class="active">
    <%= link_to 'Create New Job Posting', new_job_path %>
  </li>
</ul>
